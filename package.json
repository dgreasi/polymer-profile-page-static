{
  "name": "polymer_profile_page_static",
  "license": "BSD-3-Clause",
  "scripts": {
    "start": "polymer serve --open",
    "copy-libraries": "cp -r ./bower_components ./bower_components",
    "copy-yaml": "cp ./opt_to_deploy/app.yaml ./build/default",
    "copy-ads": "cp ./opt_to_deploy/app-ads.txt ./build/default",
    "build": "polymer build --bundle --css-minify --html-minify --js-minify",
    "predeploy": "npx bower install && npm run build && npm run copy-yaml && npm run copy-ads",
    "deploy": "gcloud app deploy build/default/app.yaml --no-promote --project greasidis-dimitris --version 2022-11",
    "lint": "npm run lint:javascript",
    "lint:javascript": "eslint . --ext js,html --ignore-path .gitignore"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.0",
    "eslint-plugin-html": "^2.0.0",
    "bower": "^1.8.14",
    "polymer-cli": "^1.9.11"
  }
}
